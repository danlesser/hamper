= form_for([user], html: {class: 'form-horizontal'}) do |f|
  - if user.errors.any?
    #error_explanation.alert.flash-alert
      .h4
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name, 'Name', class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :email, 'Email', class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :password, 'Password', class: 'col-sm-2 control-label'
    .col-sm-10
      = f.password_field :password, class: 'form-control'
  .form-group
    = f.label :password_confirmation, 'Password Confirmation', class: 'col-sm-2 control-label'
    .col-sm-10
      = f.password_field :password_confirmation, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary disable_on_click'
