= form_for([convention, room], html: {class: 'form-horizontal'}) do |f|
  - if room.errors.any?
    #error_explanation.alert.flash-alert
      .h4
        = pluralize(room.errors.count, "error")
        prohibited this room from being saved:
      %ul
        - room.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name, 'Name', class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :public_name, 'Public Name', class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :public_name, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary disable_on_click'
