= form_tag user_sessions_path, :method => :post do
  .form-group
    = label_tag :email, 'Email'
    = text_field_tag :email
  .form-group
    = label_tag :password, 'Password'
    = password_field_tag :password
  .form-group
    = check_box_tag :remember, params[:remember], false
    = label_tag :remember
  .actions
    = submit_tag "Login"
